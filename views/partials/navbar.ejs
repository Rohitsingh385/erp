<script>
    let sessionTime = 30 * 60; // 30 minutes in seconds

    function updateSessionTimer() {
        let minutes = Math.floor(sessionTime / 60);
        let seconds = sessionTime % 60;
        document.getElementById("sessionTimer").innerText = `Session expires in: ${minutes}:${seconds < 10 ? "0" : ""}${seconds}`;
        
        if (sessionTime === 0) {
            window.location.href = "/auth/logout"; // Redirect to logout when session expires
        } else {
            sessionTime--;
            setTimeout(updateSessionTimer, 1000);
        }
    }

    updateSessionTimer();
</script>
